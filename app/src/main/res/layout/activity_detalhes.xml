<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Detalhes" android:background="#65BBEA">

    <Button
            android:text="Meus Eventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonMeusEventos"
            android:layout_marginEnd="164dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/buttonDadosEventos"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="98dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Dados dos Eventos"
            android:layout_width="226dp"
            android:layout_height="48dp" android:id="@+id/buttonDadosEventos"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonListaEventos" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="156dp" android:layout_marginEnd="161dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.454"
            android:onClick="onClickDadosEventos"/>
    <Button
            android:text="Lista de Eventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonListaEventos"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonUserInfo" android:layout_marginEnd="155dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp"
            app:layout_constraintHorizontal_bias="0.825"
            android:onClick="onClickEventList"/>
    <Button
            android:text="User Info"
            android:layout_width="131dp"
            android:layout_height="48dp" android:id="@+id/buttonUserInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="500dp" android:layout_marginEnd="184dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="onClickUserInfo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp"
    />
    <TextView
            android:text="MENU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="24sp" android:textColor="#000000"
            android:textAlignment="center" android:textColorHighlight="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textAllCaps="true"
            android:elegantTextHeight="true" android:freezesText="false" android:autoText="false"
            android:fontFamily="sans-serif-black" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="59dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="172dp" android:layout_marginEnd="172dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="83dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonUserInfo"/>
</androidx.constraintlayout.widget.ConstraintLayout>